<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="115dp"
            android:layout_height="108dp"
            android:id="@+id/imageId"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="148dp"
            android:layout_marginStart="148dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="148dp" android:layout_marginRight="148dp" android:layout_marginTop="41dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toTopOf="@+id/personName"/>
    <TextView
            android:text="TextView"
            android:layout_width="207dp"
            android:layout_height="33dp"
            android:gravity="center"
            android:id="@+id/personName" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="138dp"
            android:layout_marginStart="138dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="139dp" android:layout_marginRight="139dp"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintTop_toBottomOf="@+id/imageId" android:textStyle="bold"
            android:textSize="24sp" android:textColor="@android:color/black"/>
    <Button
            android:text="@string/db_delete"
            android:padding="8dp"
            android:layout_width="90dp"
            android:id="@+id/button_database_delete"
            android:layout_height="37dp" android:background="@drawable/button_background_scalable"
            android:textStyle="bold" android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/imageId" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp" android:layout_marginTop="78dp"
            app:layout_constraintTop_toTopOf="parent"/>
</LinearLayout>